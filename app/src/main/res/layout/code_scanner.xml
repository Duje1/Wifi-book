<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.budiyev.android.codescanner.CodeScannerView
        android:id="@+id/scanner_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:frameCornersSize="250dp"
        app:frameCornersRadius="8dp"
        app:flashButtonPosition="bottomStart"
        app:flashButtonPaddingVertical="50dp"
        app:flashButtonPaddingHorizontal="200dp"
        app:flashButtonOnIcon="@drawable/flashlight"
        app:flashButtonOffIcon="@drawable/flashlight"
        app:flashButtonColor="@android:color/transparent"
        app:flashButtonVisible="true"
        app:autoFocusButtonVisible="false"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan to connect"
        android:textColor="@color/white"
        android:fontFamily="@font/sfprodisplaybold"
        android:textSize="28dp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="50dp"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan the qr code \n save it for later"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:fontFamily="@font/sfprodisplayregular"
        android:textSize="14dp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="90dp"
        ></TextView>
    <ImageView
        android:id="@+id/exit"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/exit"
        android:layout_marginTop="55dp"
        android:layout_marginStart="25dp"
        ></ImageView>

</FrameLayout>